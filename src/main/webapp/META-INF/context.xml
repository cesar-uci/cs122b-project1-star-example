<Context>
    <WatchedResource>WEB-INF/web.xml</WatchedResource>
    <WatchedResource>META-INF/context.xml</WatchedResource>

    <Resource name="jdbc/moviedb_master"
              auth="Container"
              type="javax.sql.DataSource"
              driverClassName="com.mysql.cj.jdbc.Driver"
              url="jdbc:mysql://host.docker.internal:3306/moviedb?allowPublicKeyRetrieval=true&amp;useSSL=false&amp;serverTimezone=UTC&amp;cachePrepStmts=true&amp;prepStmtCacheSize=250&amp;prepStmtCacheSqlLimit=2048"
              username="mytestuser"
              password="My6$Password"
              maxTotal="100"
              maxIdle="30"
              maxWaitMillis="10000"
              validationQuery="SELECT 1"
              testOnBorrow="true"
              testWhileIdle="true"
              removeAbandonedOnBorrow="true"
              removeAbandonedTimeout="60"
              logAbandoned="true" />

    <Resource name="jdbc/moviedb_slave"
              auth="Container"
              type="javax.sql.DataSource"
              driverClassName="com.mysql.cj.jdbc.Driver"
              url="jdbc:mysql://host.docker.internal:3306/moviedb?allowPublicKeyRetrieval=true&amp;useSSL=false&amp;serverTimezone=UTC&amp;cachePrepStmts=true&amp;prepStmtCacheSize=250&amp;prepStmtCacheSqlLimit=2048"
              username="mytestuser"
              password="My6$Password"
              maxTotal="100"
              maxIdle="30"
              maxWaitMillis="10000"
              validationQuery="SELECT 1"
              testOnBorrow="true"
              testWhileIdle="true"
              removeAbandonedOnBorrow="true"
              removeAbandonedTimeout="60"
              logAbandoned="true" />
</Context>